<div style="margin-bottom: 20px">
  <% if logged_in?(:site_admin) %>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <%= link_to blog.status.capitalize, toggle_status_blog_path(blog), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure want to delete this blog post?' }, class: "btn btn-sm btn-outline-danger" %>
      </div>
    </div>
  <% end %>
</div>