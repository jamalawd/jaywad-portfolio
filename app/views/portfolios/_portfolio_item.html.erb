<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag (portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?), class: "card-img-top" %>
    <div class="card-body">
      <p class="card-text">
        <span><%= portfolio_item.title %></span><%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", portfolio_show_path(portfolio_item.id), class: "btn btn-sm btn-outline-secondary"  %>
          <%= link_to "Edit", (edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin)), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", (portfolio_path(portfolio_item.id) if logged_in?(:site_admin)), method: :delete, class: "btn btn-sm btn-outline-secondary" %>
        </div>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %> ago</small>
      </div>
    </div>
  </div>
</div>